<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/colorTransperancy">


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Space
            android:id="@+id/sp2"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cardView"
            android:layout_alignRight="@+id/cardView"
            android:layout_alignBottom="@+id/cardView"
            android:elevation="41dp"
            android:outlineSpotShadowColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="31dp">

            <ImageView
                android:id="@+id/app"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="99dp"
            android:layout_height="144dp"
            android:layout_below="@+id/sp2"
            android:outlineSpotShadowColor="@color/colorWhite"
            android:background="@color/text_shadow"
            android:elevation="20dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="102dp"
                android:layout_height="144dp"
                android:layout_gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>

        <Space
            android:id="@+id/sp4"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_below="@+id/cardView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp4"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_black"
            android:textColor="@color/colorWhite"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp" />

        <Space
            android:id="@+id/sp5"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_below="@+id/textView" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_below="@+id/sp5"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_fav_on"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/sp6"
            android:layout_alignTop="@+id/like"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/like"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/like"
            android:gravity="center_horizontal" />

        <Space
            android:id="@+id/sp6"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_below="@+id/like" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp6"
            android:fontFamily="@font/lato_italic"
            android:textColor="@color/colorWhite"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="9sp" />
        <Space
            android:id="@+id/sp7"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_below="@+id/genre" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>